<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#767272"
              android:orientation="vertical"
              android:paddingLeft="5dp">

    <!-- Button to list all things-->
    <Button
        android:id="@+id/list_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:background="#f25252"
        android:text="@string/list_button"/>

    <!-- Button to add new thing-->
    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:background="#f25252"
        android:text="@string/add_button"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <!-- What new thing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/what_thing"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/what_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:singleLine="true"/>
    </LinearLayout>

    <!-- Where new thing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/where"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/where_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>